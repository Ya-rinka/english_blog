<%= form_for @teacher do |f| %>
    <% if @teacher.errors.any? %> # if there're any errors, i need to check which ones
        <% @teacher.errors.full_messages.each do |message| %>
            <div class="alert alert-danger"><%= message %></div>
        <% end %>
    <% end %>

    <div class="col-md-11">
        <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static bg-light">
                <h5>
                    Name
                    <%= f.text_field(:name, {class: 'form-control'})%>
                </h5>
                <h5>
                    Description
                <%= f.text_area(:description, {class: 'form-control'})%>
                </h5>
            </div>
        </div>
    </div>

    <div class="container">
        <%= f.submit({class: 'btn bg-secondary text-white'})%>
    </div>

<% end %>
